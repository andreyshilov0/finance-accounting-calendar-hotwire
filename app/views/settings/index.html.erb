<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-5">
      <div class="tab-content">
        <div class="tab-pane fade show active">
          <h3><%= t('settings.payments_category') %></h3>
          <%= link_to t('settings.add_button'), new_payment_category_path, class: 'btn btn-primary' %>
          <ul class="list-group">
            <% @payment_categories.each do |category| %>
              <% if category.persisted? %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <%= category.name %>
                  <div class="btn-group">
                    <%= link_to edit_payment_category_path(category), class: 'btn btn-secondary' do %>
                      <i class="fa fa-edit"></i>
                    <% end %>
                    <%= button_to payment_category_path(category), method: :delete, data: { confirm: 'Вы уверены?' }, class: 'btn btn-danger' do %>
                      <i class="fa fa-trash"></i>
                    <% end %>
                  </div>
                </li>
              <% end %>
            <% end %>
          </ul>
          <h3><%= t('settings.incomes_category') %></h3>
          <%= link_to t('settings.add_button'), new_income_category_path, class: 'btn btn-primary' %>
          <ul class="list-group">
            <% @income_categories.each do |category| %>
              <% if category.persisted? %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <%= category.name %>
                  <div class="btn-group">
                    <%= link_to edit_income_category_path(category), class: 'btn btn-secondary' do %>
                      <i class="fa fa-edit"></i>
                    <% end %>
                    <%= button_to income_category_path(category), method: :delete, data: { confirm: 'Вы уверены?' }, class: 'btn btn-danger' do %>
                      <i class="fa fa-trash"></i>
                    <% end %>
                  </div>
                </li>
              <% end %>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
